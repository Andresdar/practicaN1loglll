    public void Ji()throws Exception{
    int CantFil;
    String Fil=JOptionPane.showInputDialog(null,"Ingrese el tamaño de las filas de la matriz 1");
    CantFil=Integer.parseInt(Fil);
    int CantCol;
    String Col=JOptionPane.showInputDialog(null,"Ingrese el tamaño de las columnas de la matriz 1");
    CantCol=Integer.parseInt(Col);
    
            
    MatrizEnTripleta matriz = new MatrizEnTripleta(CantFil,CantCol);
     for (int i = 1; i <= CantFil; i++) {
            for (int j = 1; j <= CantCol; j++) {
                System.out.println("Este es i"+i+"Este es j"+j);
                
                String Dato=JOptionPane.showInputDialog(null,"Ingrese el numero en la fila" + (i) + "columna" + (j));
                
                double Numero=Double.parseDouble(Dato);
                        
                matriz.setCelda(i,j,Numero);
                
            }
        }
        

    System.out.println(matriz);
        
    jTextArea1.setText(matriz.toString());
    
            
    MatrizEnTripleta matriz2 = new MatrizEnTripleta(CantFil,CantCol);
     for (int i = 1; i <= CantFil; i++) {
            for (int j = 1; j <= CantCol; j++) {
                System.out.println("Este es i"+i+"Este es j"+j);
                
                String Dato=JOptionPane.showInputDialog(null,"Ingrese el numero en la fila" + (i) + "columna" + (j));
                
                double Numero=Double.parseDouble(Dato);
                        
                matriz2.setCelda(i,j,Numero);
                
            }
        }
        

    System.out.println(matriz2);
        
    jTextArea2.setText(matriz2.toString());
    MatrizEnTripleta matriz3 = new MatrizEnTripleta(CantFil,CantCol);
    matriz3=matriz3.suma(matriz,matriz2);
    jTextArea3.setText(matriz3.toString());
    } 
